script/source = "extends Spatial

export(float) var speed :float = 0.0 
export(float) var hight :float = 1.0
export(float) var distance : float = 1.0
export(float) var player_hight :float = 1.0 + (1.0 / 2.0)

var count :float = 0.0
var on_floor :bool = true
var i_pos : Vector3
var j_dir :float = 0.0
var last_j_dir :int = 0

func _ready():
	i_pos = $on_floor.get_collision_point() + Vector3.UP * $mesh.get_aabb().size

func _unhandled_input(event):
	if event is InputEventScreenTouch and not event.is_pressed():
		jump()


func _process(delta):
	anim_jump(delta)

func anim_jump(var delta: float):
	if not on_floor:
		if count > distance:
			count = 0
			i_pos = $on_floor.get_collision_point()
			on_floor = true
		
		var value_higth :float = (hight/pow(distance/2.0, 2.0))
		
		var function_squary =  -pow((count),2.0) + (distance + $on_floor.get_collision_point().distance_to(i_pos)) * (count)
		print(function_squary)
		j_dir = value_higth * function_squary
		
		transform.origin.y = j_dir
		count += delta * speed

func jump():
	on_floor = false
"

